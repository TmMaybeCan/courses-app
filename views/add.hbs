<h3>Add new course</h3>
<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate"  required>
        <label for="title">Course</label>
        <span class="helper-text" data-error="Enter the course" data-success=" "></span>

    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" max="10">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter the price" data-success=""></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required>
        <label for="img">img URL</label>
        <span class="helper-text" data-error="Enter img URL" data-success=""></span>
    </div>
    <button class="btn btn-primary">Add course</button>
</form>